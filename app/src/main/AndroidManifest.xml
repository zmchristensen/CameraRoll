<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zachchristensen.cameraroll"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zachchristensen.cameraroll.AlbumListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zachchristensen.cameraroll.AlbumDetailActivity"
            android:label="@string/title_album_detail"
            android:parentActivityName="com.zachchristensen.cameraroll.AlbumListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zachchristensen.cameraroll.AlbumListActivity" />
        </activity>
        <activity android:name="ImagePreview"></activity>
    </application>

</manifest>
